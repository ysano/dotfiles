{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-spec-existence.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/bash-validator.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-update-ticket.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": ".claude/hooks/board-status-updater.sh",
            "timeout": 15
          },
          {
            "type": "command",
            "command": ".claude/hooks/ai-confidence-recorder.sh",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/churn-counter.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-learning-capture.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": ".claude/hooks/metrics-collector.py",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
