# ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—
clean:
	@echo "ðŸ§¹ Cleaning up..."
	@rm -f ci.log
	@find . -name "*.log" -type f -delete 2>/dev/null || true
	@echo "âœ… Cleanup completed"

